<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    
    <display-name>BookingServlet</display-name>
    
    <servlet>
       <servlet-name>HomeServlet</servlet-name>                 
       <servlet-class>my.restaurant.booking.servlet.HomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
       <servlet-name>HomeServlet</servlet-name>
       <url-pattern>/home/</url-pattern>
    </servlet-mapping>
    
    <servlet>
       <servlet-name>RestaurantListServlet</servlet-name>                 
       <servlet-class>my.restaurant.booking.servlet.RestaurantListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
       <servlet-name>RestaurantListServlet</servlet-name>
       <url-pattern>/restaurantList/</url-pattern>
    </servlet-mapping>
    
    <servlet>
       <servlet-name>BookingServlet</servlet-name>                 
       <servlet-class>my.restaurant.booking.servlet.BookingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
       <servlet-name>BookingServlet</servlet-name>
       <url-pattern>/restaurantBooking/</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
 
        <welcome-file>home</welcome-file>

        <welcome-file>/views/homeView.jsp</welcome-file>
    
    </welcome-file-list>
 
</web-app>